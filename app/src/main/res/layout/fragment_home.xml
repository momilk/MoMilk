<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:layout_margin="30dp">

        <Button
            android:id="@+id/new_measurement_btn"
            android:background="@drawable/new_measurement_button_selector"
            android:text="@string/new_measurement_btn"
            android:textStyle="bold"
            android:textColor="@color/orangelight"
            android:scaleType="fitCenter"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:padding="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_momilk"/>

        <Space
            android:layout_width="60dp"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/sync_btn"
            android:background="@drawable/sync_button_selector"
            android:text="@string/sync_btn"
            android:textStyle="bold"
            android:textColor="@color/orangelight"
            android:scaleType="fitCenter"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="20dp"/>

    </LinearLayout>

</LinearLayout>